<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkpoint_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/SendReceiv"
            android:layout_width="330dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/sender"
                android:layout_width="146dp"
                android:layout_height="35dp"
                android:text="sender"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@+id/SendReceiv"
                app:layout_constraintTop_toTopOf="@+id/SendReceiv" />


            <ImageView
                android:id="@+id/arrow"
                android:layout_width="36dp"
                android:layout_height="35dp"
                app:layout_constraintStart_toEndOf="@+id/sender"
                app:layout_constraintTop_toTopOf="@+id/SendReceiv"
                app:srcCompat="@drawable/sendreceivarrow" />

            <TextView
                android:id="@+id/receiver"
                android:layout_width="142dp"
                android:layout_height="37dp"
                android:text="receiver"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/arrow"
                app:layout_constraintTop_toTopOf="@+id/SendReceiv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/oDatePickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Pick up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SendReceiv" />

        <TextView
            android:id="@+id/oDateDeliv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Date Delivery"
            app:layout_constraintStart_toEndOf="@+id/oDatePickup"
            app:layout_constraintTop_toBottomOf="@+id/SendReceiv" />

        <TextView
            android:id="@+id/oProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Product"
            app:layout_constraintStart_toEndOf="@+id/oDateDeliv"
            app:layout_constraintTop_toBottomOf="@+id/SendReceiv" />

        <TextView
            android:id="@+id/oQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Quantity"
            app:layout_constraintStart_toEndOf="@+id/oProduct"
            app:layout_constraintTop_toBottomOf="@+id/SendReceiv" />

        <TextView
            android:id="@+id/oStatus"
            android:layout_width="65dp"
            android:layout_height="56dp"
            android:text="Status"
            android:textAlignment="center"
            android:textAllCaps="true"
            app:layout_constraintStart_toEndOf="@+id/SendReceiv"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>